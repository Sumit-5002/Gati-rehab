rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if current user is the doctor of a patient
    function isDoctorOf(patientId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/doctor_patients/$(request.auth.uid)/patients/$(patientId));
    }
    
    // 1. Users collection 
    match /users/{userId} {
      // Users can read their own profile, and doctors can read profiles of patients assigned to them
      allow read: if isOwner(userId) || isDoctorOf(userId);
      // Both owners and their doctors can update profiles (e.g. doctor assigning conditions)
      allow write: if isOwner(userId) || isDoctorOf(userId);
    }
    
    // 2. Routines Collection
    match /routines/{userId} {
      // Patients read their own routines, doctors manage them
      allow read: if isOwner(userId) || isDoctorOf(userId);
      allow write: if isDoctorOf(userId);
    }
    
    // 3. Doctor Patients Collection
    match /doctor_patients/{doctorId}/patients/{patientId} {
      // Only the doctor can manage their patient list
      allow read, write: if request.auth.uid == doctorId;
    }
    
    // 4. Sessions collection 
    match /sessions/{sessionId} {
      // Support for both 'patientId' and 'userId' fields for compatibility
      allow create: if isAuthenticated() && (
        request.resource.data.patientId == request.auth.uid ||
        request.resource.data.userId == request.auth.uid ||
        isDoctorOf(request.resource.data.patientId)
      );
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isDoctorOf(resource.data.patientId) ||
        isDoctorOf(resource.data.userId)
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.userId == request.auth.uid ||
        isDoctorOf(resource.data.patientId)
      );
    }
    
    // 5. Legacy/Unused collections (kept for safety)
    match /patients/{patientId} {
      allow read: if isOwner(patientId) || isDoctorOf(patientId);
      allow write: if isOwner(patientId);
    }
    
    // 6. Trends (Charts)
    match /trends/{patientId}/{document=**} {
      // Trends are organized by patientId
      allow read: if isOwner(patientId) || isDoctorOf(patientId);
      allow write: if isDoctorOf(patientId);
    }
    
    // 7. Doctor profiles
    match /doctors/{doctorId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(doctorId);
    }
  }
}
