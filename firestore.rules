rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    function getUserType() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userType;
    }

    function getUserRole() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isAdmin() {
      return isAuthenticated() &&
        (getUserType() == 'admin' || getUserRole() == 'admin');
    }

    function isDoctor() {
      return isAuthenticated() &&
        (getUserType() == 'doctor' || getUserRole() == 'doctor');
    }

    function isDoctorOf(patientId) {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(patientId)).data.doctorId == request.auth.uid;
    }

    function isPatientOf(doctorId) {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.doctorId == doctorId;
    }

    function isDocOwner(data) {
      return isAuthenticated() && (
        data.userId == request.auth.uid || 
        data.patientId == request.auth.uid || 
        data.senderId == request.auth.uid ||
        data.receiverId == request.auth.uid ||
        data.recipientId == request.auth.uid ||
        (data.participants != null && request.auth.uid in data.participants)
      );
    }
    
    function isNotChangingType() {
      return resource == null || (
        request.resource.data.userType == resource.data.userType &&
        (!('role' in resource.data) || request.resource.data.role == resource.data.role)
      );
    }

    // 1. Users collection 
    match /users/{userId} {
      // Allow read if owner, doctor, admin, or patient of the user (if user is doctor)
      // Doctors need to be able to find patients by email, so they can read all docs
      allow read: if isOwner(userId) || isDoctor() || isAdmin() || isPatientOf(userId);

      // Allow create if owner (signup) or doctor/admin (adding patient)
      allow create: if isOwner(userId) || isDoctor() || isAdmin();

      // Allow update if owner (but not changing type), doctor (if patient is unassigned or assigned to them), or admin
      allow update: if (isOwner(userId) && isNotChangingType()) ||
                     (isDoctor() && resource.data.userType == 'patient' && (resource.data.doctorId == request.auth.uid || resource.data.doctorId == null)) ||
                     isAdmin();

      allow delete: if isAdmin();
    }
    
    // 2. Routines Collection
    match /routines/{userId} {
      allow read: if isOwner(userId) || isDoctorOf(userId) || isAdmin();
      allow write: if isOwner(userId) || isDoctorOf(userId) || isAdmin();
    }
    
    // 3. Sessions collection 
    match /sessions/{sessionId} {
      allow create: if isAuthenticated() && request.resource.data.patientId == request.auth.uid;
      allow read: if isAuthenticated() && (isDocOwner(resource.data) || isDoctorOf(resource.data.patientId) || isAdmin());
      allow update, delete: if isAuthenticated() && (isDocOwner(resource.data) || isAdmin());
    }
    
    // 4. Trends (Charts)
    match /trends/{patientId}/{document=**} {
      allow read: if isOwner(patientId) || isDoctorOf(patientId) || isAdmin();
      allow write: if isDoctorOf(patientId) || isAdmin();
    }
    
    // 5. Pain Logs collection
    match /pain_logs/{logId} {
      allow create: if isAuthenticated() && (
        request.resource.data.patientId == request.auth.uid || 
        (request.resource.data.userId == request.auth.uid && request.resource.data.patientId == null)
      );
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        (resource.data.userId == request.auth.uid && resource.data.patientId == null) ||
        isDoctorOf(resource.data.patientId) ||
        (resource.data.userId != null && isDoctorOf(resource.data.userId)) ||
        isAdmin()
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        (resource.data.userId == request.auth.uid && request.resource.data.patientId == null) ||
        isAdmin()
      );
    }

    // 6. Appointments collection
    match /appointments/{appointmentId} {
      allow create: if isAuthenticated() && (
        request.resource.data.doctorId == request.auth.uid ||
        request.resource.data.patientId == request.auth.uid
      );
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid || 
        resource.data.doctorId == request.auth.uid ||
        isAdmin()
      );
    }

    // 7. Messages collection
    match /messages/{messageId} {
      allow create: if isAuthenticated() && request.resource.data.senderId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid || 
        resource.data.receiverId == request.auth.uid ||
        (resource.data.participants != null && request.auth.uid in resource.data.participants) ||
        (resource.data.chatId != null && resource.data.chatId.matches('.*' + request.auth.uid + '.*')) ||
        isAdmin()
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        (resource.data.participants != null && request.auth.uid in resource.data.participants) ||
        isAdmin()
      );
    }
    
    // 8. Progress Photos
    match /progress_photos/{photoId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId) ||
        isAdmin()
      );
    }

    // 9. Medications collection
    match /medications/{medicationId} {
      allow read: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId) ||
        isAdmin()
      );
      allow create: if isAuthenticated() && (
        request.resource.data.userId == request.auth.uid ||
        isDoctorOf(request.resource.data.userId) ||
        isAdmin()
      );
      allow update, delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isDoctorOf(resource.data.userId) ||
        isAdmin()
      );
    }

    // 10. Audit Logs
    match /audit_logs/{logId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAdmin();
    }
    
    // 11. Doctor Patients relationship matching
    match /doctor_patients/{doctorId}/patients/{patientId} {
      allow read, write: if request.auth.uid == doctorId || isOwner(patientId) || isAdmin();
    }

    // 12. Notifications collection
    match /notifications/{notificationId} {
      allow create: if isAuthenticated() && (
        request.resource.data.recipientId == request.auth.uid ||
        isDoctorOf(request.resource.data.recipientId) ||
        isPatientOf(request.resource.data.recipientId) ||
        isAdmin()
      );
      allow read, update, delete: if isDocOwner(resource.data) || isAdmin();
    }
  }
}
