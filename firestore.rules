rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is the owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Helper function to check if current user is the doctor of a patient
    function isDoctorOf(patientId) {
      return isAuthenticated() &&
        exists(/databases/$(database)/documents/doctor_patients/$(request.auth.uid)/patients/$(patientId));
    }

    // Helper to check ownership of a document based on its data
    function isDocOwner(data) {
      return isAuthenticated() && (data.userId == request.auth.uid || data.patientId == request.auth.uid);
    }

    // Helper to check if current user is the doctor for the patient in the document data
    function isDocDoctor(data) {
      return isDoctorOf(data.patientId) || isDoctorOf(data.userId);
    }
    
    // 1. Users collection 
    match /users/{userId} {
      allow read: if isOwner(userId) || isDoctorOf(userId);
      allow write: if isOwner(userId) || isDoctorOf(userId);
    }
    
    // 2. Routines Collection
    match /routines/{userId} {
      allow read: if isOwner(userId) || isDoctorOf(userId);
      allow write: if isDoctorOf(userId);
    }
    
    // 3. Doctor Patients Collection
    match /doctor_patients/{doctorId}/patients/{patientId} {
      allow read, write: if request.auth.uid == doctorId;
    }
    
    // 4. Sessions collection 
    match /sessions/{sessionId} {
      // For creation, we check the incoming data (request.resource.data)
      allow create: if isAuthenticated() && (
        isDocOwner(request.resource.data) || isDocDoctor(request.resource.data)
      );
      // For reading, we check the existing data (resource.data)
      allow read: if isAuthenticated() && (
        isDocOwner(resource.data) || isDocDoctor(resource.data)
      );
      // For updates, we check both current and future states to ensure security
      allow update: if isAuthenticated() && (
        isDocOwner(resource.data) && isDocOwner(request.resource.data) ||
        isDocDoctor(resource.data) && isDocDoctor(request.resource.data)
      );
      // For deletion, we check current state
      allow delete: if isAuthenticated() && (
        isDocOwner(resource.data) || isDocDoctor(resource.data)
      );
    }
    
    // 5. Legacy/Unused collections (kept for safety)
    match /patients/{patientId} {
      allow read: if isOwner(patientId) || isDoctorOf(patientId);
      allow write: if isOwner(patientId);
    }
    
    // 6. Trends (Charts)
    match /trends/{patientId}/{document=**} {
      allow read: if isOwner(patientId) || isDoctorOf(patientId);
      allow write: if isDoctorOf(patientId);
    }
    
    // 7. Doctor profiles
    match /doctors/{doctorId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(doctorId);
    }

    // 8. Pain Logs collection
    match /pain_logs/{logId} {
      allow create: if isAuthenticated() && (
        isDocOwner(request.resource.data) || isDocDoctor(request.resource.data)
      );
      allow read: if isAuthenticated() && (
        isDocOwner(resource.data) || isDocDoctor(resource.data)
      );
      allow update, delete: if isAuthenticated() && (
        isDocOwner(resource.data) || isDocDoctor(resource.data)
      );
    }

    // 9. Appointments collection
    match /appointments/{appointmentId} {
      allow create: if isAuthenticated() && (
        request.resource.data.patientId == request.auth.uid ||
        isDoctorOf(request.resource.data.patientId)
      );
      allow read: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid ||
        isDoctorOf(resource.data.patientId)
      );
      allow update: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );
      allow delete: if isAuthenticated() && (
        resource.data.patientId == request.auth.uid ||
        resource.data.doctorId == request.auth.uid
      );
    }

    // 10. Messages collection
    match /messages/{messageId} {
      allow create: if isAuthenticated() && (
        request.resource.data.senderId == request.auth.uid ||
        isDocDoctor(request.resource.data)
      );
      allow read: if isAuthenticated() && (
        resource.data.senderId == request.auth.uid ||
        resource.data.receiverId == request.auth.uid
      );
    }
  }
}
